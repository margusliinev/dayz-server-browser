{
    "name": "dayz-server-browser-api",
    "description": "API for DayZ server browser",
    "author": "Margus Liinev",
    "version": "1.0.0",
    "license": "MIT",
    "type": "module",
    "main": "src/index.ts",
    "keywords": [
        "dayz",
        "servers",
        "browser",
        "api"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/margusliinev/dayz-server-browser"
    },
    "scripts": {
        "dev": "node --env-file=.env --watch src/index.ts",
        "build": "tsc",
        "start": "node --env-file=.env build/index.js",
        "test": "node --env-file=.env --test 'test/**/*.test.ts'",
        "test:coverage": "node --test --experimental-test-coverage 'test/**/*.test.ts'",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@fastify/autoload": "6.3.1",
        "@sinclair/typebox": "0.34.38",
        "fastify": "5.4.0",
        "mysql2": "3.14.2"
    },
    "devDependencies": {
        "@types/node": "24.1.0",
        "pino-pretty": "13.0.0",
        "prettier": "3.6.2",
        "typescript": "5.8.3"
    }
}
