{
    "name": "dayz-server-browser-api",
    "description": "API for DayZ server browser",
    "author": "Margus Liinev",
    "version": "1.0.0",
    "license": "MIT",
    "type": "module",
    "main": "src/index.ts",
    "keywords": [
        "dayz",
        "servers",
        "browser",
        "api"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/margusliinev/dayz-server-browser"
    },
    "scripts": {
        "dev": "node --env-file=.env --watch src/index.ts",
        "build": "tsc",
        "start": "node build/index.js",
        "test": "node --env-file=.env.test --test-global-setup=./test/setup.ts --test 'test/**/*.test.ts'",
        "test:coverage": "node --env-file=.env.test --test-global-setup=./test/setup.ts --test --experimental-test-coverage 'test/**/*.test.ts' ",
        "format": "prettier --write .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@fastify/autoload": "6.3.1",
        "@fastify/static": "8.2.0",
        "@sinclair/typebox": "0.34.38",
        "drizzle-kit": "0.31.4",
        "drizzle-orm": "0.44.3",
        "fastify": "5.4.0",
        "fastify-cron": "1.4.0",
        "mysql2": "3.14.2",
        "steam-server-query": "1.1.3"
    },
    "devDependencies": {
        "@types/node": "24.1.0",
        "pino-pretty": "13.0.0",
        "prettier": "3.6.2",
        "typescript": "5.8.3"
    }
}
